<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<h3>You're logged in</h3>
<a href="/account/edit/<%= locals.accountData.account_id %>">Edit Account Information</a>

 <% if (locals.loggedin && (locals.accountData.account_type === 'Admin'|| locals.accountData.account_type === 'Employee')) { %>
       <h3>Inventory Management</h3>
       <p><a href="/inv/">Access Inventory Management</a></p>
 <% } %>     
