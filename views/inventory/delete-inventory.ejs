<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<%- messages() %>
      <div class="add-inventory-box">
        <form method="POST" id="updateForm" action="/inv/delete" class="login-form">
          <p>Are you sure you want to delete this vehicle?</p>
          <label for="inv_make">Make</label>
          <input type="text" name="inv_make" id="inv_make" required pattern="[A-Za-z0-9]+"
          readonly value="<%= inv_make %>" title="No special characters or spaces.">
          <label for="inv_model">Model</label>
          <input type="text" name="inv_model" id="inv_model" required pattern="[A-Za-z0-9\s\-]+"
          readonly value="<%= locals.inv_model %>" title="Only letters, numbers, spaces and hyphens">
          <label for="inv_year">Year</label>
          <input type="number" name="inv_year" id="inv_year" required readonly value="<%= locals.inv_year %>" title="Must be 4 digits">
          <input type="number" name="inv_price" id="inv_price" required
          min="0.01" step="0.01" readonly value="<%= locals.inv_price %>">
          <button type="submit" class="login-btn">Delete Vehicle</button> 
          <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
   
        </form>
      </div>